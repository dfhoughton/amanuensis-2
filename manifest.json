{
  "name": "Amanuensis 2",
  "description": "Take notes on page contents. Quiz yourself on these notes later.",
  "version": "0.0.1",
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["activeTab", "storage"],
  "icons": {
    "16": "images/oofla16.png",
    "32": "images/oofla32.png",
    "48": "images/oofla48.png",
    "128": "images/oofla128.png"
  },
  "action": {
    "default_popup" : "popup.html",
    "default_icon": {
      "16": "images/oofla16.png",
      "32": "images/oofla32.png",
      "48": "images/oofla48.png",
      "128": "images/oofla128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "windows": "Ctrl+Shift+A",
        "mac": "Ctrl+Shift+A",
        "chromeos": "Ctrl+Shift+A",
        "linux": "Ctrl+Shift+A"
      },
      "description": "Take a note on the currently highlighted text or find notes on the page."
    }
  },
  "manifest_version": 3
}
